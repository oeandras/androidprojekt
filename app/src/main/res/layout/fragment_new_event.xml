<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chtv.korsoapp.fragments.NewEventFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/container">
    <TextView
        android:id="@+id/event_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_name_text" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/event_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/event_name_textview"
        android:layout_toRightOf="@+id/event_name_textview" />

    <TextView
        android:id="@+id/from_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from_text"
        android:layout_below="@+id/event_name_edittext"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/from_date_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/from_textview"
        android:layout_below="@+id/event_name_edittext"
        android:layout_alignLeft="@+id/event_name_edittext"
        android:layout_alignStart="@+id/event_name_edittext"
        android:layout_toRightOf="@+id/from_textview"
        android:focusable="false"/>

    <TextView
        android:id="@+id/until_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/until_text"
        android:layout_below="@+id/from_date_edittext"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/until_date_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/from_textview"
        android:layout_below="@+id/from_date_edittext"
        android:layout_alignLeft="@+id/event_name_edittext"
        android:layout_alignStart="@+id/event_name_edittext"
        android:layout_toRightOf="@+id/from_textview"
        android:focusable="false"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sessions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/until_date_edittext"
        android:layout_above="@+id/save_button">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_text"
        android:id="@+id/save_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/add_session_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_session"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>

</FrameLayout>
