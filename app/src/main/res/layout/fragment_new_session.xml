<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chtv.korsoapp.fragments.NewSessionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/event_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name: "
            android:textSize="@dimen/normal_text_size"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="8dp"
             />
        <TextView
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="@dimen/normal_text_size"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_toRightOf="@+id/session_name_textview"
            android:layout_toEndOf="@+id/session_name_textview" />
        <TextView
            android:id="@+id/session_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Name: "
            android:textSize="@dimen/normal_text_size"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_below="@id/event_name_textview"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/session_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:textSize="@dimen/normal_text_size"
            android:paddingBottom="8dp"
            android:layout_toRightOf="@id/session_name_textview"
            android:layout_toEndOf="@id/session_name_textview"
            android:layout_alignTop="@id/session_name_textview"/>
        <Button
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/session_name_textview"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="OK" />
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/session_name_textview"
            android:layout_toEndOf="@id/button_ok"
            android:layout_toRightOf="@id/button_ok"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Cancel" />
    </RelativeLayout>
</FrameLayout>
